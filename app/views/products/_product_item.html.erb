
<div class="row">

  <% products.each do |product| %>
    <div class="col-xs-6 col-md-3">

      <%= link_to product_path(product) do %>
       
      <%=render_product_photo(product.default_photo,"thumb") %>
      
      <%= product.title %> $ <%= product.price %>
    </div>
  <% end %>
<% end %>

</div>